# =============================================================================
# VitaNips Backend Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!

# =============================================================================
# Django Core Settings
# =============================================================================
DJANGO_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,https://yourdomain.com

# =============================================================================
# Database Configuration
# =============================================================================
# Development Database (PostgreSQL with PostGIS)
DEV_DB_NAME=vitanips_dev
DEV_DB_USER=your_db_user
DEV_DB_PASSWORD=your_db_password
DEV_DB_HOST=localhost
DEV_DB_PORT=5432

# Production Database URL (Neon, AWS RDS, etc.)
DATABASE_URL=postgresql://user:password@host:port/dbname?sslmode=require

# =============================================================================
# Celery & Redis Configuration (for background tasks)
# =============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db
# For production Redis (e.g., Redis Cloud):
# CELERY_BROKER_URL=redis://username:password@host:port/0

# =============================================================================
# Email Configuration
# =============================================================================
# Default sender email
DEFAULT_FROM_EMAIL=VitaNips <noreply@yourdomain.com>

# --- Option 1: Gmail (for development/testing only) ---
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-gmail@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
# Note: Generate App Password at https://myaccount.google.com/apppasswords

# --- Option 2: SendGrid (recommended for production) ---
# Install: pip install django-anymail[sendgrid]
# EMAIL_BACKEND=anymail.backends.sendgrid.EmailBackend
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
# Get your API key at: https://app.sendgrid.com/settings/api_keys

# --- Option 3: AWS SES (for production) ---
# Install: pip install django-anymail[amazon_ses]
# EMAIL_BACKEND=anymail.backends.amazon_ses.EmailBackend
# AWS_SES_REGION_NAME=us-east-1
# AWS_SES_REGION_ENDPOINT=email.us-east-1.amazonaws.com
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# =============================================================================
# SMS & Voice Configuration (Twilio)
# =============================================================================
# Get credentials from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# For Twilio Video (Telehealth Virtual Appointments)
# Create API Key at: https://console.twilio.com/account/keys-credentials/api-keys
TWILIO_API_KEY_SID=SKxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_API_KEY_SECRET=your_api_key_secret_here

# =============================================================================
# Push Notifications Configuration
# =============================================================================
# Firebase Cloud Messaging (FCM) - For Web & Android Push Notifications
# Get from: https://console.firebase.google.com/ > Project Settings > Cloud Messaging
FCM_SERVER_KEY=AAAAxxxxxxx:xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Apple Push Notification Service (APNS) - For iOS Push Notifications
# Get from: https://developer.apple.com/account/resources/certificates/list
APNS_CERTIFICATE_PATH=/path/to/your/apns_certificate.pem
APNS_PRIVATE_KEY_PATH=/path/to/your/apns_private_key.pem
APNS_KEY_ID=your_apns_key_id
APNS_TEAM_ID=your_apple_team_id
APNS_BUNDLE_ID=com.yourcompany.vitanips
APNS_USE_SANDBOX=True

# Firebase Configuration (for frontend - pass to React)
VITE_FIREBASE_API_KEY=AIzaSyxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.firebasestorage.app
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:xxxxxxxxxxxxxxxxxx
VITE_FIREBASE_VAPID_KEY=Bxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# AWS S3 Storage (for file uploads)
# =============================================================================
# Get credentials from: https://console.aws.amazon.com/iam/home#/security_credentials
AWS_ACCESS_KEY_ID=AKIAxxxxxxxxxxxxxxxx
AWS_SECRET_ACCESS_KEY=your_secret_access_key_here
AWS_STORAGE_BUCKET_NAME=vitanips-media
AWS_S3_REGION_NAME=us-east-1
# Optional: For private bucket with signed URLs
# AWS_DEFAULT_ACL=private
# AWS_S3_SIGNATURE_VERSION=s3v4

# =============================================================================
# Admin User Configuration (for initial setup)
# =============================================================================
ADMIN_USER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@yourdomain.com
DJANGO_SUPERUSER_PASSWORD=change-this-secure-password

# =============================================================================
# API Keys & Third-Party Services
# =============================================================================
# Add any additional third-party service API keys here
# Examples:
# STRIPE_SECRET_KEY=sk_test_xxxxxx (for payments)
# GOOGLE_MAPS_API_KEY=AIzaxxxxxxx (for geocoding)
# SENTRY_DSN=https://xxxx@sentry.io/xxxx (for error tracking)

# =============================================================================
# Development Tools
# =============================================================================
# For local development only - uncomment if needed
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
# CELERY_TASK_ALWAYS_EAGER=True
